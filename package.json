{
  "name": "master-chef",
  "version": "1.0.0",
  "scripts": {
    "test": "truffle test",
    "build": "truffle compile",
    "migrate": "truffle migrate",
    "lint": "solium --dir contract",
    "coverage": "node --max-old-space-size=4096 ./node_modules/.bin/truffle run coverage",
    "deploy:build:tsc": "tsc --build",
    "deploy:build:js": "node ./migrations/2_deploy_contract.js",
    "deploy:testnet": "truffle deploy --network binancetest --reset",
    "deploy:devnet": "truffle deploy --network dev --reset",
    "deploy": "waffle waffle.json && npm run deploy:build:tsc && npm run deploy:build:js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "@truffle/hdwallet-provider": "^1.3.0"
 },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.11",
    "chai": "^4.2.0",
    "ganache-cli": "^6.12.1",
    "solidity-coverage": "^0.7.12",
    "solium": "^1.2.5",
    "truffle": "^5.1.52"
  }
}
